{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation
{% endblock subtitle %}


{% block content %}

<div class="container">
    <form method="POST">
        {% if error %}<p>{{ error }}</p>{% endif %}
        <label for="donor-name-input">Donor name:</label>
        <input id="donor-name-input" type="text" name="donorname"><br>
        <label for="amount-input">Amount:</label>
        <input id="amount-input" type="number" name="amount"><br><br />
        <input type="submit" value="Add Donation">
    </form>
</div>

{% endblock content %}
